@model TaskMngr.Models.Tsk

<div>
    <input asp-for="@Model.Id" type="hidden" id="ID" />


    <div class="col-lg-12">

        <div class="form-group mb-3">
            <label asp-for="@Model.Name" class="control-label mb-1"></label>
            <input asp-for="@Model.Name" class="form-control" id="Name" />
            <span id="NameError" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-12">

        <div class="form-group mb-3">
            <label asp-for="@Model.Description" class="control-label mb-1"></label>
            <input asp-for="@Model.Description" class="form-control" id="Description" />
            <span id="DescriptionError" class="text-danger"></span>
        </div>
    </div>

    <div class="col-lg-12">

        <div class="form-group mb-3">

            <input type="submit" value="Save" class="btn btn-outline-success w-100 mb-2" />


            <a class="btn btn-outline-secondary w-100" asp-action="Index">Cancel</a>
        </div>
    </div>


</div>
